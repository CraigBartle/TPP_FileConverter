{
  "name": "the-printing-press-file-converter",
  "version": "1.0.0",
  "description": "The Printing Press File Converter - converts various file types to PDF",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "npm run build"
  },
  "keywords": [
    "pdf",
    "converter",
    "print",
    "electron"
  ],
  "author": "Print Shop",
  "license": "MIT",
  "devDependencies": {
    "electron": "27.3.11",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "sharp": "^0.32.6",
    "pdf-lib": "^1.17.1"
  },
  "build": {
    "appId": "com.theprintingpress.file-converter",
    "productName": "The Printing Press File Converter",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "binaries/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "binaries/",
        "to": "binaries/"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}